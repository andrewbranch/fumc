<div>
  <button type="button" {{bind-attr class=":ui :blue :button feature.isUploading:disabled feature.isControllerDirty::disabled"}} {{action "save"}}>Save</button>
</div>
<div class="active-label">
  <div class="ui toggle checkbox">
    {{input type="checkbox" checked=feature.active}}
    <label>Active</label>
  </div>
</div>
<div class="iphone5 size">
  <h3 class="ui header">iPhone 5</h3>
  <h5 class="ui header">640 &times; 910</h5>
  <div {{bind-attr class=":feature-frame feature.showingImage"}}>
    <div class="feature-content">
      {{#if feature.iphoneFiveFileUpload}}
        <img {{bind-attr src="feature.iphoneFiveFileUpload.base64Image"}}>
      {{else}}
        {{#if feature.iphoneFiveImage}}
          <img {{bind-attr src="feature.iphoneFiveImageURL"}}>
        {{else}}
          <!-- <div class="size-label">Drop file here</div> -->
        {{/if}}
      {{/if}}
    </div>
  </div>
  {{file-upload oldFile=feature.iphoneFiveImage change="iphoneFiveFileSelected"}}
  <div {{bind-attr class=":ui :blue :progress feature.iphoneFiveFileUpload.showProgressBar::hidden feature.iphoneFiveFileUpload.didUpload:successful"}}>
    <div class="bar" {{bind-attr style="feature.iphoneFiveFileUpload.progressStyle"}}></div>
  </div>
</div>
